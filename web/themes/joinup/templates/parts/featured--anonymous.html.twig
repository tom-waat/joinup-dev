<div class="section section--featured section--featured-lg">
  <div class="anonymous-menu">
    <ul class="anonymous-menu__list">
      <li class="anonymous-menu__item">
        {# @todo The login text should be changed - "Sign in" instead of "Log in" - https://webgate.ec.europa.eu/CITnet/jira/browse/ISAICP-2639. #}
        <a class="anonymous-menu__link" href="{{ path("user.login") }}">{{ 'Log in'|t }}</a>
      </li>
    </ul>
  </div>
  <div class="featured-lg">
    <div class="featured-lg__wrapper">
      <div class="featured-lg__logo">
        <img src="{{ base_path ~ directory }}/images/logo.png">
      </div>
      <h1 class="featured-lg__text">{{ 'Share and reuse interoperability solutions for public administrations'|t }}</h1>
      <div class="featured-lg__search-bar search-bar--section search-bar--white mdl-textfield mdl-js-textfield mdl-textfield--floating-label mdl-textfield--align-right">
        <label class="search-bar__label mdl-button mdl-js-button mdl-button--icon" for="search-bar__input">
          <span class="search-bar__icon icon icon--search"></span>
        </label>
        {# @todo Create search form - https://webgate.ec.europa.eu/CITnet/jira/browse/ISAICP-2637 #}
        <form action="{{ path("view.search.page_1") }}">
        <input class="search-bar__input mdl-textfield__input" placeholder="Start typing to search..." type="text" name="keys"
          id="search-bar__input">
        </form>
      </div>
      {{ page.featured }}
    </div>
    <div class="featured-lg__overlay"></div>
  </div>
</div>
