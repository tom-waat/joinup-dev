{#
/**
 * @file
 * Theme implementation for displaying a single search result coming from Search API field.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'listing__item',
    'listing__item--tile',
    'mdl-cell',
    item['#view_mode'] == 'view_mode_tile' ? 'mdl-cell--4-col mdl-cell--3-col-wide',
    item['#view_mode'] == 'view_mode_featured' ? 'mdl-cell--12-col',
  ]
%}
<div class="{{ classes|join(' ') }}">
  {{ item }}
</div>
