{#
/**
 * @file
 * Theme override for an 'input' #type form element.
 *
 * Available variables:
 * - attributes: A list of HTML attributes for the input element.
 * - children: Optional additional rendered elements.
 *
 * @see template_preprocess_input()
 */
#}
{%
  set classes = [
    'button__no-bg',
    'button__no-bg--grey',
  ]
%}
<div class="button__no-bg-wrapper button__no-bg-wrapper--grey"><span class="icon icon--remove"></span><input{{ attributes.addClass(classes) }} />{{ children }}</div>
